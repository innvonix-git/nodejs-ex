<% include template/head %>
  <script src="../global_assets/js/plugins/forms/selects/select2.min.js"></script>
  <script src="../assets/js/app.js"></script>
<% include template/subheader %>
  <!-- Page header -->
  <div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
      <div class="page-title d-flex">
        <h4> <span class="font-weight-semibold">Flagged Location</span></h4>
        <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
      </div>

      <div class="header-elements d-none">
      </div>
    </div>

    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
      <div class="d-flex">
        <div class="breadcrumb">
          <a href="home" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
          <span class="breadcrumb-item active"><i class="icon-office mr-2"></i>Locations</span>
          <span class="breadcrumb-item active"><i class="icon-warning22 mr-2"></i>Flagged Location</span>
        </div>
      </div>
    </div>
  </div>
  <!-- /page header -->
  <!-- Content area -->
  <div class="content">
    <% include template/flashmessage %>
    <div class="card">
      <div class="card-body">
        <form method="get" name="search_form" id="search_form">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
              <input type="hidden" name="page" value="0" />
              <input type="hidden" name="ordered_column" id="ordered_column" value="<%-ordered_column%>" />
              <input type="hidden" name="ordered_sort" id="ordered_sort" value="<%-ordered_sort%>" />
              <input type="hidden" name="perpage" id="perpage" value="<%-perpage%>" />
                <input type="text" name="keyword" value="<%-keyword%>" id="keyword" placeholder="Search user" class="form-control"/> 
            </div>
            <div class="col-lg-3 col-md-5 col-sm-12 col-xs-12 btndiv">
              <button type="submit" class="btn btn-primary btn-sm">Search <i class="icon-search4 ml-2"></i></button>
              <a href="<%-base_url%>/admin/flaggedlocation" class="btn btn-sm bg-slate" id="resetApplyBtn">Reset <i class="icon-reset ml-2"></i></a>
            </div>
            <div class="col-lg-6 col-md-4 col-sm-12 col-xs-12 perpagediv">
              <label>
                <span>Show</span>
                <select class="form-control selectperpage" data-fouc>                  
                  <option value="10" <%= (perpage==10) ? 'selected' : ''%>>10</option>
                  <option value="25" <%= (perpage==25) ? 'selected' : ''%>>25</option>
                  <option value="50" <%= (perpage==50) ? 'selected' : ''%>>50</option>
                  <option value="100" <%= (perpage==100) ? 'selected' : ''%>>100</option>
                </select>
              </label>
            </div>
          </div>
        </form>
      </div>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
                <th>#</th>
                <th class="filter-class spamlocation.property_name" data-order="<%= (ordered_column=='spamlocation.property_name') ? ordered_sort : -1 %>" data-column="spamlocation.property_name">Flagged Location</th>

                <th class="filter-class user.first_name" data-order="<%= (ordered_column=='user.first_name') ? ordered_sort : -1 %>" data-column="user.first_name">Flagged By</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% 
            var i=1;
            if (locations.length > 0) {
                  locations.forEach((location) => { %>
             <tr>
                <td><%-(page*perpage)+i %><%i++%></td>
                <td>
                  <a href="<%-base_url+'/location/'+location.spamlocation.slug+'/details'%>"><%= location.spamlocation.property_name%></a>
                </td>
                <td>
                  <%if(location.user.user_type==1){%>
                  <a href="<%-base_url%>/admin/userdetails?id=<%= location.user.id %>"><%= location.user.first_name+' '+location.user.last_name %></a>
                  <%}else{%>
                  <a href="<%-base_url%>/admin/business-detail?id=<%= location.user.id %>"><%= location.user.first_name+' '+location.user.last_name %></a>
                  <%}%>
                </td>
                <td><% if(location.status==0){ %>
                  <span class="badge badge-info">Pending</span>
                    <% } else if(location.status==1){ %>
                  <span class="badge badge-danger">Flag Approved</span>
                    <% } %> 
                </td>
                 <td> 
                  <div class="list-icons">
                    <a href="javascript:void(0)" class="list-icons-item text-success-600" data-popup="tooltip" title="Deactivate Location" data-container="body" onclick="confirmmessage('Are you sure you want to deactivate this location? ','/admin/reject-location?returnback=flaggedlocation&&id=<%=location.spamlocation.id%>')">
                      <i class="icon-checkmark-circle"></i>
                    </a>
                    <% if(location.status==0){ %>
                    <a href="javascript:void(0)" class="list-icons-item text-danger-600" data-popup="tooltip" title="Reject Request" data-container="body" onclick="confirmmessage('Are you sure you want to reject this flag request? ','/admin/rejectlocationflag?returnback=flaggedlocation&&id=<%=location.id%>')">
                        <i class="icon-close2"></i>
                    </a>
                    <% }%>
                  </div>
                </td>
              </tr>
            <% }) }else{ %>
            <tr>
              <td colspan="7" class="text-center">No Result Found.</td>
            </tr>
            <% }%>
            </tbody>
        </table>
      </div>
    </div>  
    <% include template/pagignation%>
  </div>
  <script type="text/javascript">
    $(document).ready(function(){
      $('.selectperpage').select2({
        minimumResultsForSearch: Infinity,
        width: 80
      });

      $('.selectperpage').on('change',function(){
        var selectedperpage = $(this).val();
        $('#perpage').val(selectedperpage);
        $("#search_form").submit();
      })
      $(".pagination li").click(function(){
          $("#page").val($(this).attr('data-id'));
          $("#pagination-form").submit();
      });
      $("#resetApplyBtn").click(function(){
        $("#keyword").val('');
        $("#page").val('');
        $("#search_form").submit();
      });

      
      if($('#ordered_sort').val()==1){
        $("."+$("#ordered_column").val()).css('font-weight','bold');
      }else{
        $("."+$("#ordered_column").val()).css('font-weight','normal');
      }

      $(".filter-class").click(function(){
        var order = $(this).data('order');
        order = (order==1) ? -1 : 1;
        $(this).data('order',order);
        var column_order = $(this).data('order');
        var column_name = $(this).data('column');
        $('#ordered_column').val(column_name);
        $('#ordered_sort').val(column_order);
        $('#search_form').submit();
      })
    });
  </script>
  <!-- /content area -->
<% include template/subfooter%>   
<% include template/footer%>