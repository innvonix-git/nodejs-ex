      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th class="filter-class property_name" data-order="<%= (ordered_column=='property_name') ? ordered_sort : -1 %>" data-column="property_name">Location Name<i class="<%=(ordered_column!='property_name') ? 'fa fa-sort' : (ordered_sort==1) ? 'fa fa-sort-asc sorting-asc' : 'fa fa-sort-desc sorting-dsc'%> ml-2"></i></th>

              <th>Category</th>

              <th class="filter-class user.contact_number" data-order="<%= (ordered_column=='user.contact_number') ? ordered_sort : -1 %>" data-column="user.contact_number">Contact Number<i class="<%=(ordered_column!='user.contact_number') ? 'fa fa-sort' : (ordered_sort==1) ? 'fa fa-sort-asc sorting-asc' : 'fa fa-sort-desc sorting-dsc'%> ml-2"></i></th>
              
              <th class="filter-class user.mail" data-order="<%= (ordered_column=='user.mail') ? ordered_sort : -1 %>" data-column="user.mail">Email<i class="<%=(ordered_column!='user.mail') ? 'fa fa-sort' : (ordered_sort==1) ? 'fa fa-sort-asc sorting-asc' : 'fa fa-sort-desc sorting-dsc'%> ml-2"></i></th>
              
              <th class="filter-class user.first_name" data-order="<%= (ordered_column=='user.first_name') ? ordered_sort : -1 %>" data-column="user.first_name">Business Owner<i class="<%=(ordered_column!='user.first_name') ? 'fa fa-sort' : (ordered_sort==1) ? 'fa fa-sort-asc sorting-asc' : 'fa fa-sort-desc sorting-dsc'%> ml-2"></i></th>
              
              <th class="filter-class status" data-order="<%= (ordered_column=='status') ? ordered_sort : -1 %>" data-column="status">Status<i class="<%=(ordered_column!='status') ? 'fa fa-sort' : (ordered_sort==1) ? 'fa fa-sort-asc sorting-asc' : 'fa fa-sort-desc sorting-dsc'%> ml-2"></i></th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% 
              var i=1;
              if (properties.length > 0) {
                    properties.forEach((property) => { %>
            <tr>
              <td><%-(page*perpage)+i %><%i++%></td>
              <td><%= property.property_name%></td>
              <%
               var categoryList = [];
               if(property.category){
                (property.category).forEach((category) => { 
                  categoryList.push(' '+category.category_name);                   
               }); } %>
              <td><%= categoryList.join()%></td>
              <td><%= property.user.contact_number%></td>
              <td><%= property.user.mail%></td>
              <td><%= property.user.first_name+' '+property.user.last_name%></td>
              <td>
                <% if(property.status==0) { %>
                  <span class="badge badge-info">Pending</span>
                  <% } else if(property.status==1){ %>
                  <span class="badge badge-success">Active</span>
                  <% } else if(property.status==2) { %>
                  <span class="badge badge-danger">Deactive</span>
                  <% } %>
              </td>
              <td> 
                  <div class="list-icons">
                    <a href="<%-base_url%>/location/<%-property.slug%>/details" target="_blank" class="list-icons-item text-primary-600" data-popup="tooltip" title="View" data-container="body">
                      <i class="icon-eye8"></i>
                    </a>

                  <% if(property.status==0) { %>

                  <a href="javascript:void(0)" class="list-icons-item text-success-600" data-popup="tooltip" title="Approve Location" data-container="body" onclick="confirmmessage('Are you sure you want to approve this location?','/admin/approve-location?id=<%=property.id%>')">
                    <i class="icon-checkmark-circle"></i>
                  </a>
                       <% }else if(property.status==1) { %>

                    <a href="javascript:void(0)" class="list-icons-item text-danger-600" data-popup="tooltip" title="Deactivate Location" data-container="body" onclick="confirmmessage('Are you sure you want to deactivate this location? ','/admin/reject-location?id=<%=property.id%>')">
                    <i class="icon-close2"></i>
                  </a>

                       <% }else if(property.status==2) { %>
                    
                    <a href="javascript:void(0)" class="list-icons-item text-success-600" data-popup="tooltip" title="Activate Location" data-container="body" onclick="confirmmessage('Are you sure you want to activate this location? ','/admin/activate-location?id=<%=property.id%>')">
                    <i class="icon-checkmark-circle2"></i>
                  </a>
                  <% } %>
                  </div>
                </td>
            </tr>
            <% }) }else{ %>
            <tr>
              <td colspan="7" class="text-center">No Result Found.</td>
            </tr>
            <% } %>
          </tbody>
        </table>
